<h1>Bodyweight History:</h1>

<%= link_to "Add a new weigh-in", new_prep_bodyweight_path(@prep) %>

<%= line_chart @weights.map { |weight| [weight.created_at.strftime("%d %B %Y"), weight.display_weight]}, min: @weights.minimum(:weight)/10-1, max: @weights.maximum(:weight)/10+1, ytitle: "Bodyweight (lbs)" %>

<ul>
  <%= render @weights %>
</ul>

<%= link_to "Back to Prep Home", prep_path(@prep) %>
