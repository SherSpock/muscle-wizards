<div class="top-bar">
  <div class="row">
    <div class="top-bar-left" id="top-bar-left">
      <ul class="dropdown menu" data-dropdown-menu>
        <li class="menu-text">
          <%= link_to root_path, id: "logo" do %>
            <span class="green">MUSCLE</span>WIZARDS
          <% end %>
        </li>
      </ul>
    </div>
    <div class="top-bar-right" id="top-bar-right">
      <ul class="menu">
        <% if current_user %>
          <li><%= link_to "Profile", current_user, id: "hide-small" %></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Login", new_user_session_path %></li>
          <li><%= link_to "Sign up", new_user_registration_path, id: "hide-small" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
