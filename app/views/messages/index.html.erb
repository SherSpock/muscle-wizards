<div class="row">
  <div class="small-12 columns">
    <% if @over_ten %>
       <%= link_to 'Show Previous', '?m=all' %>
    <% end %>

    <div class="messages">
      <% @messages.each do |message| %>
        <% if message.body %>
          <% user = User.find(message.user_id) %>
          <div class="message">
            <% if user == current_user%>
              <div class="header"><strong class="green"><%= user.name %></strong> <%= message.message_time %></div>
            <% else %>
              <div class="header"><strong class="bluish"><%= user.name %></strong> <%= message.message_time %></div>
            <% end %>
            <div class="message-body">
              <%= message.body %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <%= simple_form_for [@prep, @conversation, @message] do |f| %>
      <%= f.input :body, label: false, placeholder: "Enter a new message here" %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.button :submit, value: "Send Message" %>
      <%= link_to "Back to Prep", prep_path(@prep), class: "button" %>
    <% end %>
  </div>
</div>
